import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        Produto p = new Produto();
        String cadastrar = null;

        System.out.println("Digite o nome do produto: ");
        p.setNome(sc.nextLine());
        System.out.println("Digite a quantidade: ");
        p.setQuantidade(sc.nextInt());
        System.out.println("Digite o valor unitário: ");
        p.setValor(sc.nextDouble());
        System.out.println("Digite a quantidade que desaja comprar; ");
        int quantidadeCompra = sc.nextInt();

        if (quantidadeCompra <= 0) {
            System.out.println("Quantidade inválida.");
        } else if (quantidadeCompra > p.getQuantidade()){
            System.out.println("Não há estoque suficente.");
        }else{
            p.realizarCompra(quantidadeCompra);
        }

        System.out.println("Nome: " + p.getNome());
        System.out.println("Quantidade: " + p.getQuantidade());
        System.out.println("Valor R$" + p.getValorCompra());
    }
}
