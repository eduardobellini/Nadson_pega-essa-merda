import java.util.Scanner;

public class Main2 {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        String cadastrar = "S";

        while (cadastrar.equalsIgnoreCase("S")) {


            System.out.println("Digite o nome do produto: ");
            String nomeProduto = sc.next();
            System.out.println("Digite a quantidade: ");
            int quantidade = sc.nextInt();
            System.out.println("Digite o valor do produto; ");
            double valor = sc.nextDouble();


            System.out.println("Nome: " + nomeProduto);
            System.out.println();


            System.out.println("Digite a quantidade que deseja comprar: ");
            int quantidadeCompra = sc.nextInt();

            if (quantidadeCompra <= 0) {
                System.out.println("Quantidade inválida.");
            } else if (quantidadeCompra > quantidade) {
                System.out.println("Não há estoque suficiente para realizar a compra");
            } else {
                double valorCompra = quantidadeCompra + valor;

                quantidade -= quantidadeCompra;

                System.out.println("Total da compra: " + valorCompra);
                System.out.println("Estoque atualizado: " + quantidade);

                System.out.println("Deseja cadastarar um novo produto? (S/N)");
                cadastrar = sc.next().toUpperCase();
            }
        }
    }
}
